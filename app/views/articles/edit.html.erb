<div class="navbar">
  <div class ="nav-link"> <%= link_to "Articles", articles_path  %> </div>
  <div class ="nav-link"> <%= link_to "New article", new_article_path  %> </div>
</div>
<div class="container">
<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-warning' %>
<% end %>
<div class="delete"><%= link_to "Back", articles_path  %> </div>
</div>
